@using goose2s.Services
@using goose2s.State
@using goose2s.Models
@using System.Threading
@inject QueueService queue


@code {
    [CascadingParameter]
    private SpotifyStateProvider spotify { get; set; }
    private long sequenceNumber { get; set; }

    [Parameter]
    public Action<QueueItem> TrackChanged { get; set; }

    private void Yield(MouseEventArgs eventArgs, QueueItem item) {
        TrackChanged?.Invoke(item);
    }
}

<div>
</div>

@if (spotify._queue == null)
{
    <p><em>Loading...</em></p>
}
else
{
<div>
    <table class="core">
        <thead>
            <tr>
                <th>...</th>
                <th>Image</th>
                <th>Name</th>
                <th>Artist</th>
                <th>Popularity</th>
            </tr>
        </thead>
        <tbody>            
    @foreach (var result in spotify.GetQueue("static", -1L).Result.Item2)
    {
        string playStyle = "";
        if (result.PlayCommenced > 0L) {
            playStyle = "border: 1px solid #6f42c1";
        }
            <tr style="@playStyle">
                <td><button @onclick="@((e)=>Yield(e, result))">▶️</button></td>
                <td><img src="@result.Image" /></td>
                <td>@result.TrackName</td>
                <td>@result.ArtistName</td>  
                <td>
                    <Meter Level="@result.Popularity"/>
                </td>      
            </tr>
    }
        </tbody>
    </table>
</div>
}